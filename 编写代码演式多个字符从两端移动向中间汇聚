#include<windows.h>
#include<stdio.h>
#include<string.h>
#include<stdlib.h>

int main()
{
char arr1[]="welcome to bit!!!!!!";
char arr2[]="####################";
int left =0;
//int right=sizeof(arr1)/sizeof(arr1[0])-2;和int right=strlen(arr1)-1;是同一个意思
int right = strlen(arr1)-1;
while(left<=right)
{
arr2[left]=arr1[left];
arr2[right]=arr1[right];
printf("%s\n",arr2);
//Sleep(1000);
//system("cls");//执行系统命令的一个函数‘cls’清空屏幕
left++;
right--;
}
//printf("%s\n",arr2);
	return 0;
}
